# ============================================================
# Example Environment Configuration
# ------------------------------------------------------------
# Copy this file to `.env` and adjust the values for your setup.
# 
# Notes:
# - Use secure, unique secrets for all keys in production.
# - Better Auth URL and NEXT_PUBLIC_BASE_URL should match.
# - Replace all *.your-domain.com URLs with your actual domains.
# ============================================================


########################################
# AUTHENTICATION (Better Auth)
########################################

# Secret key for Better Auth â€” must be unique and private in production
BETTER_AUTH_SECRET=super_secret_key

# Base URL of your app (used for both Auth and frontend)
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000


########################################
# DATABASE (PostgreSQL)
########################################

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sokratest-next
POSTGRES_HOST=localhost
POSTGRES_PORT=5432


########################################
# EMAIL (SMTP)
########################################

# SMTP mail server settings
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_USERNAME=user
SMTP_PASSWORD=pw


########################################
# STORAGE (S3 or MinIO)
########################################

# S3 or MinIO configuration for document and file storage
S3_ENDPOINT=minio.your-domain.com
S3_PORT=9000
S3_ACCESS_KEY=s3_access_key
S3_SECRET_KEY=s3_secret_key

# Set to true if using HTTPS for your S3 endpoint
S3_USE_SSL=true


########################################
# BACKEND SERVICES (Trigger.dev)
########################################

# Used for secure communication between internal services (e.g. document pipeline)
TRIGGER_SECRET_KEY=tr_secret_key

# The Trigger service handles long-running tasks such as document processing and embedding
TRIGGER_API_URL=https://trigger.your-domain.com

# Trigger.dev project ID (required for deployment)
TRIGGER_PROJECT=your_trigger_project_id


########################################
# OPENAI-COMPATIBLE PROVIDER
########################################

# AI model endpoint (e.g. for embeddings, summarization, etc.)
OPENAI_COMPATIBLE_BASE_URL=https://chat.your-domain.com/v1
OPENAI_COMPATIBLE_API_KEY=saia_api_key


########################################
# LANGFUSE (Tracing / Analytics)
########################################

LANGFUSE_SECRET_KEY=langfuse_secret_key
LANGFUSE_PUBLIC_KEY=langfuse_public_key
LANGFUSE_BASEURL=https://langfuse.your-domain.com


########################################
# QDRANT (Vector Database for RAG)
########################################

# Qdrant stores embeddings and supports semantic search for document retrieval
QDRANT_URL=https://qdrant.your-domain.com
QDRANT_API_KEY=qdrant_api_key


########################################
# UMAMI ANALYTICS (Frontend)
########################################

NEXT_PUBLIC_UMAMI_SCRIPT_URL=https://umami.your-domain.com/script.js
NEXT_PUBLIC_UMAMI_WEBSITE_ID=public_umami_website_id


########################################
# OTHER CONFIG
########################################

# Internal API key for Sokratest platform access (trigger.dev -> SokratesT)
SOKRATEST_API_KEY=sokratest_api_key